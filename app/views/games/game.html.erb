<!DOCTYPE html>
<html>
  <head>
    <title>Game</title>
  </head>
  <body>
    <canvas id="game-board-canvas" width="1200" height="900" style="background-color:#e9e9e0">
      Game requires HTML5 support. Sorry.
    </canvas>
    <button id="Button">Test</button>
    <script>
      var playername = "<%= current_user.name %>"
      var game = new Game()
      game.createPlayer(playername)
      game.draw()
      game.start()
    </script>
    <script>
      document.getElementById("Button").addEventListener("click", function (){
        var xhr = new XMLHttpRequest();
        var stuff = { avatar: { xPos: 50, yPos: 50 }}
        var data = JSON.stringify(stuff);
        xhr.open('POST', "http://localhost:3000/avatars", true);
        xhr.send(data);
      })
    </script>
  </body>
</html>
